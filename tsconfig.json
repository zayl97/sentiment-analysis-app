{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "noImplicitAny": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "types": [
            "vitest/globals"
        ]
    },
    "include": [
        "*.ts",
        "tests/**/*.ts",
        "src/scripts/script.ts",
        "src/scripts/sentimentAnalysis.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}